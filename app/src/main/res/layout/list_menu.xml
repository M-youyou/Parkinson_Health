<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_sensor"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="#EEEEEE">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingStart="5dp"
    android:paddingEnd="20dp"
    >

    <ImageView
        android:id="@+id/ic_menu_item"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:scaleType="center"
        tools:ignore="ContentDescription"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ic_menu_item"
        android:typeface="sans"
        android:textSize="13sp"
        android:textColor="#424242"
        android:textStyle="bold"
        android:id="@+id/tv_menuHeader" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ic_menu_item"
        android:layout_below="@+id/tv_menuHeader"
        android:id="@+id/tv_menuDescription"
        android:textSize="13sp"
        android:textColor="#9E9E9E"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_menuExecution"
        android:textColor="#4CAF50"
        android:textSize="12sp"
        tools:ignore="RelativeOverlap"
        />
</RelativeLayout>

</android.support.v7.widget.CardView>